<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.stage.Screen?>

<fx:root fx:id="root" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <fx:define>
      <Screen fx:factory="getPrimary" fx:id="screen" />
   </fx:define>
   <children>
      <HBox fx:id="fxTitle" alignment="CENTER" prefHeight="${root.height/8.0}" style="-fx-background-color: #77F;">
         <children>
            <Label text="The Amazing Travel Application">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox>
         <children>
            <VBox minHeight="-Infinity" prefHeight="${root.height*(7.0/8.0)}" prefWidth="${root.width/4.0}" spacing="5.0" style="-fx-border-color: #CCC;">
               <children>
                  <Label text="Search constraints" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></Label>
                  <CheckBox fx:id="flightsCheck" mnemonicParsing="false" onAction="#searchHandler" text="Flights">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></CheckBox>
                  <CheckBox fx:id="hotelsCheck" mnemonicParsing="false" onAction="#searchHandler" text="Hotels">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></CheckBox>
                  <CheckBox fx:id="daytoursCheck" mnemonicParsing="false" onAction="#searchHandler" text="Day tours">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></CheckBox>
                  <Label text="From:">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></Label>
                  <DatePicker fx:id="fxBeginningDate" onAction="#searchHandler">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></DatePicker>
                  <Label text="To:">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></Label>
                  <DatePicker fx:id="fxEndDate" onAction="#searchHandler">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></DatePicker>
                  <Label text="Sort by:">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <ChoiceBox fx:id="sortBy" prefWidth="150.0" value="Date" onAction="#searchHandler">
                     <items>
                        <FXCollections fx:factory="observableArrayList">
                           <String fx:value="Date" />
                           <String fx:value="Price" />
                        </FXCollections>
                     </items>
                  </ChoiceBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            <VBox fx:id="fxSearchResults" prefWidth="${root.width/2.0}" style="-fx-border-color: #CCC;">
               <children>
                  <HBox fx:id="fxHSearchField" alignment="CENTER" prefHeight="50.0" prefWidth="${fxSearchResults.width}" spacing="5.0">
                     <children>
                        <ImageView fx:id="searchIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
                        <TextField fx:id="searchBar" maxWidth="1.7976931348623157E308" onAction="#searchHandler" />
                     </children>
                  </HBox>
                  <ScrollPane fx:id="fxSearchResultsScroll" prefHeight="${root.height - fxTitle.height - fxHSearchField.height}" prefWidth="${fxSearchResults.width}" fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;">
                    <content>
                      <AnchorPane fx:id="fxMainView" minWidth="0.0" />
                    </content>
                  </ScrollPane>
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefHeight="${root.height*(7.0/8.0)}" prefWidth="${root.width/4.0}" style="-fx-border-color: #CCC;">
               <children>
                  <Label fx:id="fxSelectedLabel" text="Selected items">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font></Label>
                  <ScrollPane fx:id="fxSelectedScroll" prefHeight="${root.height - fxTitle.height - fxSelectedLabel.height}" prefWidth="${fxSearchResults.width}" fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;">
                     <content>
                        <AnchorPane fx:id="fxSelected" minWidth="0.0" />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</fx:root>
