<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root alignment="CENTER_LEFT" spacing="5.0" style="-fx-border-color: #777; -fx-background-color: #FFF; -fx-background-radius: 5; -fx-border-radius: 5;" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <ImageView fx:id="fxIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="fxName" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="5.0">
         <children>
            <Spinner fx:id="fxSpinner" editable="true" prefWidth="60.0" />
            <ImageView fx:id="fxRemove" fitHeight="20.0" fitWidth="20.0" onMouseClicked="#removeHandler" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</fx:root>
