<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root type="javafx.scene.layout.VBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="15.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Welcome to the amazing travel application!">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <GridPane hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" vgap="5.0">
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="200.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Name:" />
            <Label text="Email:" GridPane.rowIndex="1" />
            <Label text="Password:" GridPane.rowIndex="2" />
            <Label text="Confirm password:" GridPane.rowIndex="3" />
            <TextField fx:id="fxName" GridPane.columnIndex="1" />
            <TextField fx:id="fxEmail" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <PasswordField fx:id="fxPassword" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <PasswordField fx:id="fxConfirmPassword" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label fx:id="fxNameError" text="Name required" textFill="RED" GridPane.columnIndex="2" />
            <Label fx:id="fxEmailError" text="Email required" textFill="RED" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Label fx:id="fxPasswordError" text="Password required" textFill="RED" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Label fx:id="fxConfirmPasswordError" text="Passwords don't match" textFill="RED" GridPane.columnIndex="2" GridPane.rowIndex="3" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </GridPane>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="fxCreateAccount" mnemonicParsing="false" onAction="#createAccountHandler" text="Create account" />
            <Button fx:id="fxLogIn" mnemonicParsing="false" onAction="#loginHandler" text="Already have an account?" />
         </children>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</fx:root>
