<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root alignment="CENTER" spacing="10.0" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Your booked items:" />
      <ScrollPane>
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" />
        </content>
      </ScrollPane>
      <Label fx:id="fxSubtotal" />
      <Label fx:id="fxVAT" />
      <Separator style="-fx-background-color: #777;" />
      <Label fx:id="fxTotal" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#backHandler" text="Back to ..." />
            <Button defaultButton="true" mnemonicParsing="false" onAction="#paymentHandler" text="Proceed to checkout" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</fx:root>
